<h1>Search Results</h1>
<p><%= link_to "Back", new_search_path %></p>

<% if @search.search_cars.empty? %>

  <p>No Records Found</p>

<% else %>

  <% @search.search_cars.each do |car| %>
    <br>

    <ul>
      <li>
        <h3><%= car.model %></h3>
        <p>Manufacturer: <%= Manufacturer.find(car.manufacturer_id).name %><p>
        <p>Color: <%= car.color %></p>
        <p>Year: <%= car.year %></p>
        <p>Milage: <%= car.milage %></p>
      </li>
    </ul>
  <% end %>
<% end %>
