
<%unless @item.nil? %>
  <% @item.each do |item_info| %>
    <h1>Update item name: </h1>

    <form action="/groceries/<%= item_info["id"] %>" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="name">Rename your item:</label>
      <input id="name" name="name" value="<%=item_info["name"] %>"type="text">

      <button type="submit">Update</button>
    </form>
  <% end %>
<% end %>
