
<h1>New Wing Order</h1>

<%= form_for @wing_order, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div class="row">
    <p> <%= f.label  :customer_name, "Full Name" %>
      <%= f.text_field :customer_name %></p>
  </div>
  <div class="row">
    <p>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </p>
  </div>
  <div class="row">
    <p>
      <%= f.label :state %>
      <%= select(:wing_order, :state, @state_collection) %></p>
  </div>

    <div class="row" >
      <p>
         <%= f.collection_radio_buttons(:quantity, @quantity_collection, :first, :last) %>
      </p>
    </div>

  <div class="row">
    <%= check_box_tag(:ranch_dressing) %>
    <%= label_tag(:ranch_dressing, "Add Ranch Dressing") %>
  </div>

  <div class="row">
    <p>Flavors    <%= collection_check_boxes(:wing_order, :flavor_ids, Flavor.all, :id, :name) %></p>

  </div>

  <%= f.submit "Place Order" %>
<% end %>
