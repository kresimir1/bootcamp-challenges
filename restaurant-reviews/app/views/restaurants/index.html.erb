<h3>Restaurants list</h3>


<p><%= link_to 'Add New Restaurant', new_restaurant_path %></p>

<ul>
  <% unless @restaurants.nil? %>
    <% @restaurants.each do |restaurant| %>
      <li>
        <h4><%=link_to restaurant.name, restaurant %>, <%= restaurant.city %></h4>
      </li>
    <% end %>
  <% end %>
</ul>
