<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Add New TV show</title>
  </head>

  <body>
    <h1>Add Show Details</h1>

      <form action="/television_shows/new" method="post">
        <div>
          <label for="title">Title</label>
          <input type="text" id="title" name="title">
        </div>

        <div>
          <label for="network">Network</label>
          <input type="text" id="network" name="network">
        </div>
        <div>
          <label for="starting_year">Starting Year</label>
          <input type="text" id="starting_year" name="starting_year">
        </div>
        <div>
          <label for="synopsis">Synopsis</label>
          <input type="text" id="synopsis" name="synopsis">
        </div>
        <div>
          <label for="genre">Genre</label>
            <select name="genre">
              <option value="action">Action</option>
              <option value="mystery">Mystery</option>
              <option value="drama">Drama</option>
              <option value="comedy">Comedy</option>
              <option value="fantasy">Fantasy</option>
            </select>
        </div>

        <div>
          <button><input type="submit" value="Add TV Show"></button>
        </div>

      </form>
      <p><%= @error %></p>
      <p><%= @message %></p>
  </body>
</html>
